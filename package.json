{
  "name": "cyphersol-ats-electron-app",
  "version": "1.0.0",
  "description": "",
  "main": "frontend/electron/main.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development concurrently \"npm run start:fastapi\" \"npm run start:react\" \"npm run start:electron\"",
    "start:fastapi": "cd backend && uvicorn app:app --reload --port 5000",
    "start:react": "cd frontend/react-app && npm start",
    "start:electron": "cross-env NODE_ENV=development wait-on http://localhost:3000 && electron frontend/electron/main.js",
    "build": "cross-env NODE_ENV=development npm run build:react && npm run build:electron",
    "build:react": "cd frontend/react-app && cross-env NODE_ENV=production npm run build",
    "build:electron": "cross-env NODE_ENV=production electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^33.2.1",
    "electron-builder": "^24.13.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.electron.electronapp",
    "productName": "Electron App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "frontend/**/*",

      "node_modules/*/"
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "electron-is-dev": "^3.0.1"
  }
}